import random   
import time    

class Fruta:
    def _init_(self, nome, emoji, chance):
        self.nome = nome      
        self.emoji = emoji    
        self.chance = chance  
        
    def _str_(self):
        return self.emoji


class Cereja(Fruta):
    def _init_(self):
        super()._init_("Cereja", "ğŸ’", 0.2)

class Limao(Fruta):
    def _init_(self):
        super()._init_("LimÃ£o", "ğŸ‹", 0.5)

class Melancia(Fruta):
    def _init_(self):
        super()._init_("Melancia", "ğŸ‰", 0.3)


class Cassino:
    def _init_(self):
        self.frutas = [Cereja(), Limao(), Melancia()]

    def girar_roleta(self):
        pesos = [f.chance for f in self.frutas] 
        return random.choices(self.frutas, weights=pesos, k=3)
    def exibir_roleta(self, roleta):
        print("ğŸ° Girando a roleta...")
        time.sleep(1)
        for fruta in roleta:
            print(fruta, end=" ", flush=True)
            time.sleep(0.5)
        print("\n")  
    def verificar_resultado(self, roleta):
        if roleta[0].nome == roleta[1].nome == roleta[2].nome:
            print("ğŸ€ JACKPOT! TrÃªs iguais! VocÃª ganhou o prÃªmio mÃ¡ximo!")
        elif (roleta[0].nome == roleta[1].nome or 
              roleta[1].nome == roleta[2].nome or 
              roleta[0].nome == roleta[2].nome):
            print("âœ¨ Duas frutas iguais! VocÃª ganhou um prÃªmio menor!")
        else:
            print("ğŸ’€ Nenhuma combinaÃ§Ã£o... azar, tenta de novo!")

    def jogar(self):
        input("Pressione ENTER pra girar a roleta...")
        roleta = self.girar_roleta()       
        self.exibir_roleta(roleta)         
        self.verificar_resultado(roleta)   


if __name__ == "__main__":  
    jogo = Cassino()
    jogo.jogar()
